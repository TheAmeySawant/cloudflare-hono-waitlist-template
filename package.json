{
  "name": "cloudflare-hono-waitlist-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "client": "bun run --bun astro dev",
    "build:client": "bun run --bun astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint 'src/**/*.{js,ts,tsx,astro}'",
    "worker": "wrangler dev",
    "dev": "concurrently \"bun run client\" \"bun run worker\"",
    "dryrun:staging": "bun run build:client && wrangler deploy --dry-run --env staging",
    "dryrun:prod": "bun run build:client && wrangler deploy --dry-run --env production",
    "deploy:staging": "bun run build:client && wrangler deploy --env staging",
    "deploy:prod": "bun run build:client && wrangler deploy --env production",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply dojo_local_db --local",
    "db:migrate:staging": "wrangler d1 migrations apply dojo_staging_db --remote --env staging",
    "create:test:db": "bun run ./scripts/create-test-db.ts",
    "destroy:test:db": "bun run ./scripts/destroy-test-db.ts",
    "test": "bun run create:test:db && bun test && bun run destroy:test:db"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.50.0",
    "astro": "^5.16.5",
    "concurrently": "^9.2.1",
    "drizzle-orm": "^0.45.1",
    "eslint": "^9.39.2",
    "eslint-plugin-astro": "^1.5.0",
    "hono": "^4.11.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.561.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "wrangler": "^4.55.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251218.0",
    "@types/bun": "^1.3.5",
    "daisyui": "^5.5.14",
    "drizzle-kit": "^0.31.8",
    "drizzle-seed": "^0.3.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  }
}
